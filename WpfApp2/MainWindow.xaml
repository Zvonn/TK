<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор оценок" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Задание 1 (макс. 10):" Width="150"/>
                <TextBox x:Name="task1Box" Width="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Задание 2 (макс. 50):" Width="150"/>
                <TextBox x:Name="task2Box" Width="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Задание 3 (макс. 30):" Width="150"/>
                <TextBox x:Name="task3Box" Width="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Задание 4 (макс. 10):" Width="150"/>
                <TextBox x:Name="task4Box" Width="50"/>
            </StackPanel>

            <Button Content="Рассчитать" 
                    Margin="0,20" 
                    Padding="10,5"
                    Click="CalculateButton_Click"/>


            <TextBlock x:Name="resultText" 
                       Margin="0,10"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>